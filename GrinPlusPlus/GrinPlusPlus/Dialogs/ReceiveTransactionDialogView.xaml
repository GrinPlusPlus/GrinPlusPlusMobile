<?xml version="1.0" encoding="UTF-8" ?>
<Frame
    x:Class="GrinPlusPlus.Dialogs.ReceiveTransactionDialogView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resource="clr-namespace:GrinPlusPlus.Resources"
    prism:DialogLayout.RelativeWidthRequest="0.75"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="#2f2f2f"
    CornerRadius="5"
    HasShadow="true">
    <StackLayout>
        <Editor
            Margin="0"
            BackgroundColor="#191919"
            HeightRequest="250"
            IsSpellCheckEnabled="False"
            Text="{Binding Slatepack}"
            TextColor="Yellow" />
        <Button
            Grid.Row="0"
            Grid.Column="0"
            BackgroundColor="#e5e500"
            Command="{Binding CloseCommand}"
            CornerRadius="5"
            HeightRequest="44"
            IsEnabled="{Binding IsActive}"
            Text="{x:Static resource:AppResources.Receive}"
            TextColor="Black" />
    </StackLayout>
</Frame>