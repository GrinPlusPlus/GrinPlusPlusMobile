<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrinPlusPlus.Views.WalletLoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resource="clr-namespace:GrinPlusPlus.Resources"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="{Binding Username}"
    Padding="20,0,20,40"
    NavigationPage.HasBackButton="False"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="#151515">
    <NavigationPage.TitleView>
        <Image
            Margin="0"
            Aspect="AspectFit"
            HeightRequest="40"
            HorizontalOptions="Start"
            Source="banner.png" />
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="FillAndExpand"
            Orientation="Vertical"
            Spacing="10"
            Margin="5,10,5,10"
            VerticalOptions="FillAndExpand">
            <Label
                Text="{x:Static resource:AppResources.Password}"
                TextColor="Gray"
                TextTransform="Uppercase" />
            <Entry
                BackgroundColor="#252525"
                FontSize="20"
                HeightRequest="48"
                IsPassword="True"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False"
                Text="{Binding Password}"
                TextColor="White"
                VerticalTextAlignment="Center">
                <Entry.Effects>
                    <xct:RemoveBorderEffect />
                </Entry.Effects>
            </Entry>
            <StackLayout
                Margin="0,10,0,20"
                Padding="0"
                BackgroundColor="#151515"
                HeightRequest="48"
                Spacing="0">
                <Button
                    Command="{Binding OpenWalletCommand}"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    BorderColor="#050505"
                    CornerRadius="5"
                    TextColor="#FFD717"
                    HeightRequest="48"
                    IsEnabled="{Binding Password, Converter={xct:IsNotNullOrEmptyConverter}}"
                    IsVisible="{Binding IsBusy, Converter={xct:InvertedBoolConverter}}"
                    Text="{x:Static resource:AppResources.OpenWallet}"
                    TextTransform="None" />
                <ActivityIndicator
                    HeightRequest="40"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="#FFD717" />
            </StackLayout>
            <Button
                Command="{Binding DeleteWalletCommand}"
                CornerRadius="5"
                BackgroundColor="Transparent"
                FontSize="16"
                TextColor="Red"
                HeightRequest="48"
                IsEnabled="{Binding Password, Converter={xct:IsNotNullOrEmptyConverter}}"
                Text="{x:Static resource:AppResources.DeleteWallet}"
                TextTransform="None"
                VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
