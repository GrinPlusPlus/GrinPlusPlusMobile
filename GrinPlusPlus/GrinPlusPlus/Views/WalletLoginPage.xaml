<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrinPlusPlus.Views.WalletLoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resource="clr-namespace:GrinPlusPlus.Resources"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="Black"
    Visual="Material">
    <ContentPage.Content>
        <StackLayout Spacing="8" VerticalOptions="StartAndExpand">
            <Label
                Padding="20,5,20,0"
                FontSize="22"
                HorizontalOptions="Start"
                Text="{x:Static resource:AppResources.OpenWallet}"
                TextColor="White"
                VerticalOptions="Center" />
            <BoxView
                Margin="20,0,20,20"
                HeightRequest="1"
                HorizontalOptions="Start"
                WidthRequest="50"
                Color="White" />
            <Label
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="{Binding Username}"
                TextColor="Yellow"
                VerticalOptions="Center" />
            <Label
                Margin="20,20,20,0"
                Text="{x:Static resource:AppResources.Password}"
                TextColor="Gray"
                TextTransform="Uppercase" />
            <Entry
                Margin="20,0,20,20"
                BackgroundColor="#191919"
                IsPassword="True"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False"
                Text="{Binding Password}"
                TextColor="White"
                VerticalTextAlignment="Center" />
            <Button
                Margin="50,10,50,0"
                BackgroundColor="#191919"
                Command="{Binding OpenWalletCommand}"
                CornerRadius="5"
                HeightRequest="44"
                IsEnabled="{Binding IsIdle}"
                Text="{x:Static resource:AppResources.Open}"
                TextColor="Yellow" />
            <Label
                Margin="20,20,20,0"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{Binding ExceptionMessage}"
                TextColor="Red"
                TextTransform="Uppercase" />
            <ActivityIndicator
                HeightRequest="40"
                IsRunning="{Binding IsBusy}"
                Color="Yellow" />
            <Button
                Margin="50,0,50,40"
                BackgroundColor="Transparent"
                Command="{Binding DeleteWalletCommand}"
                CornerRadius="5"
                HeightRequest="44"
                Text="{x:Static resource:AppResources.DeleteWallet}"
                TextColor="Red"
                VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
