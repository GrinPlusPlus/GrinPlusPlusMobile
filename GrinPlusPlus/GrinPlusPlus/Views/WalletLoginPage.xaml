<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrinPlusPlus.Views.WalletLoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resource="clr-namespace:GrinPlusPlus.Resources"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="Black">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding DeleteWalletCommand}" Text="{x:Static resource:AppResources.DeleteWallet}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout
            Padding="20,0,20,0"
            HorizontalOptions="FillAndExpand"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="FillAndExpand">
            <Label
                Text="{x:Static resource:AppResources.Password}"
                TextColor="Gray"
                TextTransform="Uppercase" />
            <Entry
                BackgroundColor="#191919"
                IsPassword="True"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False"
                Text="{Binding Password}"
                TextColor="White"
                VerticalTextAlignment="Center">
                <Entry.Effects>
                    <xct:RemoveBorderEffect />
                </Entry.Effects>
            </Entry>
            <StackLayout
                Margin="0,10,0,0"
                Padding="0"
                BackgroundColor="#191919"
                HeightRequest="44"
                Spacing="0">
                <Button
                    BackgroundColor="#191919"
                    Command="{Binding OpenWalletCommand}"
                    CornerRadius="5"
                    HeightRequest="44"
                    IsEnabled="{Binding Password, Converter={xct:IsNotNullOrEmptyConverter}}"
                    IsVisible="{Binding IsBusy, Converter={xct:InvertedBoolConverter}}"
                    Text="{x:Static resource:AppResources.Open}"
                    TextColor="Yellow" />
                <ActivityIndicator
                    HeightRequest="38"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    Color="LightGray" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
