<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GrinPlusPlus.Views.SendingGrinsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resource="clr-namespace:GrinPlusPlus.Resources"
    Title="{x:Static resource:AppResources.PleaseConfirm}"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout
            Margin="0"
            Padding="0"
            HorizontalOptions="FillAndExpand"
            Orientation="Vertical"
            Spacing="10"
            VerticalOptions="FillAndExpand">
            <Label
                Margin="20,15,20,0"
                Text="{x:Static resource:AppResources.Amount}"
                TextColor="Gray" />
            <Label Margin="20,0,20,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontSize="38"
                            Text="{Binding Amount, StringFormat='{}{0:N9}'}"
                            TextColor="White" />
                        <Span
                            FontSize="16"
                            Text=" ツ"
                            TextColor="White" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label
                Margin="20,15,20,0"
                Text="{x:Static resource:AppResources.Fee}"
                TextColor="Gray" />
            <Label Margin="20,0,20,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontSize="20"
                            Text="{Binding Fee}"
                            TextColor="White" />
                        <Span
                            FontSize="Caption"
                            Text=" ツ"
                            TextColor="White" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Label
                Margin="20,25,20,0"
                IsVisible="{Binding IsAddressLabelVisible}"
                Text="{x:Static resource:AppResources.Address}"
                TextColor="Gray" />
            <Label
                Margin="20,0,20,0"
                FontSize="20"
                IsVisible="{Binding IsAddressLabelVisible}"
                Text="{Binding Address}"
                TextColor="White" />
            <Button
                Margin="20,100,20,0"
                BackgroundColor="#0C0C0C"
                Command="{Binding SendUsingTorCommand}"
                CornerRadius="5"
                HeightRequest="44"
                Text="{x:Static resource:AppResources.Confirm}"
                TextColor="White"
                TextTransform="None" />
            <Button
                Margin="20,0,20,40"
                BackgroundColor="Transparent"
                Command="{Binding CancelCommand}"
                CornerRadius="5"
                HeightRequest="44"
                Text="{x:Static resource:AppResources.Cancel}"
                TextColor="Red"
                VerticalOptions="EndAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>